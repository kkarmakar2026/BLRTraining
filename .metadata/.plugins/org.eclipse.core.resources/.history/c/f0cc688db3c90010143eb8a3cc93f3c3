package com.mphasis;

import java.time.Duration;
import java.time.ZoneId;
import java.time.ZonedDateTime;

public class DemoOnZonedDateAndTime {

	public static void main(String[] args) {
		
		ZonedDateTime dateTime = ZonedDateTime.now();
		System.out.println(dateTime);
		System.out.println(dateTime.getOffset());
		System.out.println(dateTime.getZone());
		ZonedDateTime regionDateTime = ZonedDateTime.now(ZoneId.of("Asia/Kathmandu"));
		System.out.println(regionDateTime);
		System.out.println(dateTime);
		
		int diffSeconds = dateTime.getOffset().getTotalSeconds()-regionDateTime.getDayOff
		
		Duration diff = Duration.between(dateTime, regionDateTime);
		System.out.println(diff.toMinutes());
	}
}




package com.mphasis;

public class First3 {
    public static void main(String[] args) {
        // Outer loop for rows
        for (int i = 0; i < 4; i++) {
            // Inner loop for columns
        	for(int k =0;k< i;k++) {
        	System.out.print(" ");
        	}
            for (int j = 0; j<=i; j++) {
                System.out.print("* "); // print stars in same line
            }
            System.out.println(); // move to next line after each row
        }
    }
}

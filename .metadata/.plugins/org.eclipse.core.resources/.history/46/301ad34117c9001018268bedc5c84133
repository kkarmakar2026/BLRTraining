package com.mphasis;

import java.util.Date;
import java.time.LocalDate;
import java.time.LocalDateTime;

public class DemoOnDatesAndTime {
    
    public static void main(String[] args) {
        
        Date currentDate = new Date();
        System.out.println(currentDate);
        
        long ms = System.currentTimeMillis();
        System.out.println(ms);
        Date currentDateOfMS = new Date(ms);
        System.out.println(currentDateOfMS);
        
        long msl = 123457890123L;
        Date mydate = new Date(msl);
        System.out.println(mydate);
        
        // Modern approach instead of deprecated Date(int, int, int)
        LocalDate newDate = LocalDate.of(2024, 2, 2);
        System.out.println(newDate);
        
        // If you want date + time
        LocalDateTime newDateTime = LocalDateTime.of(2024, 2, 2, 10, 30);
        System.out.println(newDateTime);
        
        Date dob = new Date(2000-1900,05,20);
        Date today = new Date();
        int ageInYears = today.getYear()-dob.getYear();
        System.out.println(ageInYears);
;    }
}

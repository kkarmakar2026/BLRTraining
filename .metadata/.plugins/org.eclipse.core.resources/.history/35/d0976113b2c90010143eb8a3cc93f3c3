package com.mphasis;

import java.time.Duration;
import java.time.ZoneId;
import java.time.ZonedDateTime;

public class DemoOnZonedDateAndTime {

    public static void main(String[] args) {
        
        ZonedDateTime dateTime = ZonedDateTime.now();
        System.out.println("Current DateTime: " + dateTime);
        System.out.println("Offset: " + dateTime.getOffset());
        System.out.println("Zone: " + dateTime.getZone());

        ZonedDateTime regionDateTime = ZonedDateTime.now(ZoneId.of("America/New_York"));
        System.out.println("New York DateTime: " + regionDateTime);

        // Convert both to Instant for proper comparison
        Duration diff = Duration.between(regionDateTime.toInstant(), dateTime.toInstant());
        System.out.println("Difference in minutes: " + diff.toMinutes());
    }
}

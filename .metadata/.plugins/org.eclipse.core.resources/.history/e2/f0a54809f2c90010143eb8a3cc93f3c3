package com.mphasis;
//Logger.java
public class LoggerDemo {
 // Step 1: Create a private static instance of Logger
 private static LoggerDemo instance;

 // Step 2: Make the constructor private so no other class can instantiate it
 private LoggerDemo() {
     System.out.println("Logger initialized...");
 }

 // Step 3: Provide a public static method to get the single instance
 public static LoggerDemo getInstance() {
     if (instance == null) {
         instance = new LoggerDemo();
     }
     return instance;
 }

 // Step 4: Add a log method
 public void log(String msg) {
     System.out.println("[LOG]: " + msg);
 }
}

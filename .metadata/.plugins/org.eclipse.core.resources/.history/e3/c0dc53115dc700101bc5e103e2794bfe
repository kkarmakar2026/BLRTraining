package com.mphasis;

class Fruits {
    String name;
    String color;
    double fruitCost;

    Fruits(String name, String color, double fruitCost) {
        this.name = name;
        this.color = color;
        this.fruitCost = fruitCost;
    }

    @Override
    public String toString() {
        return "Fruit: " + name + ", Color: " + color + ", Price: " + fruitCost;
    }
}

public class ArrayDemo {

    // Method to calculate cost per dozen
    public static double calculateCostPerDozen(Fruits f) {
        return f.fruitCost * 12;
    }

    public static void main(String[] args) {
        // Create an array of Fruits with size 5
        Fruits arr[] = new Fruits[5];

        // Create fruit objects
        Fruits fruit1 = new Fruits("Apple", "Red", 60.50);
        Fruits fruit2 = new Fruits("Banana", "Yellow", 20.00);
        Fruits fruit3 = new Fruits("Orange", "Orange", 40.00);
        Fruits fruit4 = new Fruits("Grapes", "Green", 80.00);
        Fruits fruit5 = new Fruits("Mango", "Yellow", 100.00);

        // Store them in the array
        arr[0] = fruit1;
        arr[1] = fruit2;
        arr[2] = fruit3;
        arr[3] = fruit4;
        arr[4] = fruit5;

        // Display all fruits using a loop
        for (Fruits f : arr) {
            System.out.println(f + " | Cost per dozen: " + calculateCostPerDozen(f));
        }
    }
}

package com.mphasis;

import java.util.Arrays;   // Import Arrays utility class

public class ArrayPractice {

    public static void main(String[] args) {
        // Declare and initialize array
        int[] arr = {10, 20, 30, 40};

        // Print array using Arrays.toString()
        System.out.println("Original Array: " + Arrays.toString(arr));

        // Store array as string
        String nums = Arrays.toString(arr);
        System.out.println("Array as String: " + nums);

        // Sort array
        Arrays.sort(arr);
        System.out.println("Sorted Array: " + Arrays.toString(arr));

        // Iterate and print each element with its index
        for (int ele : arr) {
            System.out.println("Element: " + ele);
        }

        // Binary search for 30
        int index = Arrays.binarySearch(arr, 30);
        if (index >= 0) {
            System.out.println("Element 30 found at index: " + index);
        } else {
            System.out.println("Element 30 not found");
        }
        
        int[] arr1 = {10,30,20,40};
        Arrays.sort(arr1);
        System.out.println(Arrays.equals(arr, arr1));
    }
}
